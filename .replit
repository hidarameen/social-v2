modules = ["nodejs-20", "python-3.11", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Production Server"

[[workflows.workflow]]
name = "Next.js Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/start-with-telegram-local-api.sh pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Next.js Production Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -f .next/lock && pnpm build && bash scripts/start-with-telegram-local-api.sh pnpm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "scripts/start-with-telegram-local-api.sh", "pnpm", "start"]
build = ["pnpm", "build"]

[userenv]

[userenv.shared]
TWITTER_STREAM_ENABLED = "true"
