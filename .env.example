# Copy this file to `.env.local` and fill in real values.
# Never commit `.env.local` (it's gitignored).

# Required
DATABASE_URL=
NEXTAUTH_SECRET=

# Public base URL (set both to your deployed HTTPS URL)
APP_URL=https://example.com/
NEXTAUTH_URL=https://example.com/
# Optional (used in some pages)
NEXT_PUBLIC_APP_URL=https://example.com/

# App identity
APP_NAME=SocialFlow

# Recommended security (mobile bearer token signing)
MOBILE_AUTH_SECRET=

# Twitter / X
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
# Optional legacy/advanced Twitter settings
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=
TWITTER_POLL_INTERVAL_SECONDS=10
TWITTER_WEBHOOK_ENABLED=false
TWITTER_WEBHOOK_SECRET=
TWITTER_WEBHOOK_ENV_LABEL=dev
TWITTER_STREAM_ENABLED=false

# Facebook
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_VIDEO_RESUMABLE_THRESHOLD_MB=50

# Instagram (Basic Display)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# Google / YouTube
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# TikTok
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# Social API provider mode
# native (default) or buffer
SOCIAL_API_PROVIDER=native
# Optional: choose exactly which platforms use Buffer (comma-separated).
# When set, listed platforms use Buffer and all other platforms use native.
# Supports: facebook, instagram, twitter (or x), tiktok, youtube, telegram, linkedin
# Example:
# BUFFER_PLATFORMS=twitter,facebook,youtube
BUFFER_PLATFORMS=
# Optional per-platform override (examples):
# SOCIAL_API_PROVIDER_TWITTER=buffer
# SOCIAL_API_PROVIDER_FACEBOOK=buffer

# Buffer API (https://api.bufferapp.com/1)
BUFFER_ACCESS_TOKEN=
BUFFER_API_BASE_URL=https://api.bufferapp.com/1
# Optional account selectors per network (comma-separated id/username)
BUFFER_TWITTER_ACCOUNTS=
BUFFER_FACEBOOK_ACCOUNTS=
BUFFER_INSTAGRAM_ACCOUNTS=
BUFFER_TIKTOK_ACCOUNTS=
BUFFER_YOUTUBE_ACCOUNTS=
BUFFER_TELEGRAM_ACCOUNTS=
BUFFER_LINKEDIN_ACCOUNTS=

# Telegram (MTProto user auth)
API_ID=
API_HASH=

# Email (verification/reset)
EMAIL_VERIFICATION_ENABLED=true
EMAIL_PROVIDER=resend
EMAIL_FROM=
EMAIL_REPLY_TO=
RESEND_API_KEY=
GMAIL_SMTP_USER=
GMAIL_SMTP_APP_PASSWORD=
EMAIL_VERIFY_CODE_TTL_MINUTES=15
EMAIL_RESET_CODE_TTL_MINUTES=15

# Workers / queue
WORKER_GLOBAL_CONCURRENCY=8
WORKER_PER_USER_CONCURRENCY=2
WORKER_PER_TASK_CONCURRENCY=4
WORKER_QUEUE_MAX_SIZE=2000

# Misc
YTDLP_COOKIES_PATH=./twitter_cookies.txt
DEBUG_LOGS=false
